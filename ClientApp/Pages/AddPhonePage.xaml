<StackPanel x:Class="ClientApp.Pages.AddPhonePage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:res="clr-namespace:ClientApp.Properties"
            xmlns:e="clr-namespace:ClientApp.Elements"
            xmlns:local="clr-namespace:ClientApp.Pages"
            mc:Ignorable="d"
            KeyDown="addPhonePage_KeyDown">
    <TextBlock x:Name="message_TextBox" 
               DockPanel.Dock="Top" 
               Text="{x:Static res:Resources.addPhoneNumber_TextBlock}"/>
    <TextBlock x:Name="warningMessage_TextBlock" 
               DockPanel.Dock="Top" 
               Style="{StaticResource warningMessage}"
               Text="warning message"/>
    <e:PhoneNumberBox x:Name="phoneNumberBox"/>
    <Button x:Name="addChangePhone"
            Content="{x:Static res:Resources.addPhoneNumber_Button}" 
            Click="addPhone_Click"
            HorizontalAlignment="Left"/>
</StackPanel>
